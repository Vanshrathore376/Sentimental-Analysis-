<body>
    <div class="container">
        <h1>Sentiment Analysis</h1>
        <textarea id="review" placeholder="Type your review here..."></textarea>
        <br>
        <button onclick="predictSentiment()">Analyze</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        function preprocessText(text) {
            return text.toLowerCase().replace(/[^\w\s]/g, '');
        }

        function predictSentiment() {
            const review = document.getElementById('review').value.trim();
            const resultDiv = document.getElementById('result');

            if (!review) {
                resultDiv.innerHTML = "Please enter a review!";
                resultDiv.className = "result";
                return;
            }

            const negativeWords = ["hate", "worst", "bad", "terrible", "disappointing"];
            let sentiment = "Positive";
            let sentimentClass = "positive";

            negativeWords.forEach(word => {
                if (preprocessText(review).includes(word)) {
                    sentiment = "Negative";
                    sentimentClass = "negative";
                }
            });

            resultDiv.innerHTML = `Sentiment: ${sentiment}`;
            resultDiv.className = `result ${sentimentClass}`;
        }
    </script>
